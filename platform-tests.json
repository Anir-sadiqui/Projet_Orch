            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:8083/api/v1/orders",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8083",
              "path": ["api", "v1", "orders"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 999,\n  \"shippingAddress\": \"Adresse invalide\",\n  \"items\": [\n    {\n      \"productId\": 1,\n      \"quantity\": 1\n    }\n  ]\n}"
            }
          }
        },
        {
          "name": "2.2 - Commande avec produit en rupture",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:8083/api/v1/orders",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8083",
              "path": ["api", "v1", "orders"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 1,\n  \"shippingAddress\": \"10 rue de Paris\",\n  \"items\": [\n    {\n      \"productId\": 1,\n      \"quantity\": 999\n    }\n  ]\n}"
            }
          }
        }
      ]
    },
    {
      "name": "3 - Tests Happy Path (par endpoint)",
      "item": [
        {
          "name": "3.1 - Lister les utilisateurs",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8081/api/v1/users",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["api", "v1", "users"]
            }
          }
        },
        {
          "name": "3.2 - Lister les produits",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8082/api/v1/products",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8082",
              "path": ["api", "v1", "products"]
            }
          }
        },
        {
          "name": "3.3 - Lister les commandes",
          "request": {
            "method": "GET",
